        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/beforebtn2"
        app:layout_constraintTop_toBottomOf="@+id/beforebtn2"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/reg2_text1"
        style="@style/reg_style1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:letterSpacing="-0.03"
        android:text="@string/reg2_text1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/reg2_icon"
        app:layout_constraintTop_toBottomOf="@+id/reg2_icon"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/reg2_text2"
        style="@style/reg_style2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:letterSpacing="-0.03"
        android:text="@string/reg2_text2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/reg2_text1"
        app:layout_constraintTop_toBottomOf="@+id/reg2_text1"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/down_image"
        android:layout_width="14dp"
        android:layout_height="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/tel_edit"
        app:layout_constraintEnd_toEndOf="@+id/tel_edit"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/tel_edit"
        app:layout_constraintTop_toTopOf="@+id/tel_edit"
        app:srcCompat="@mipmap/down_image_foreground" />

    <EditText
        android:id="@+id/tel_edit"
        android:layout_width="356dp"
        android:layout_height="50dp"
        android:layout_marginTop="62dp"
        android:ems="10"
        android:fontFamily="@font/noto_sans_bold"
        android:hint="í†µì‹ ì‚¬"
        android:focusable="false"
        android:textColorHint="#747F89"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/reg2_text2"
        app:layout_constraintTop_toBottomOf="@+id/reg2_text2"
        android:theme="@style/EditStyle"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/phone_edit"
        android:layout_width="356dp"
        android:layout_height="50dp"
        android:layout_marginTop="63dp"
        android:ems="10"
        android:fontFamily="@font/noto_sans_bold"
        android:hint="íœ´ëŒ€í° ë²ˆí˜¸"
        android:inputType="phone"
        android:maxLength="13"
        android:textColorHint="#747F89"
        android:theme="@style/EditStyle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/tel_edit"
        app:layout_constraintTop_toBottomOf="@+id/tel_edit"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/next_rgstr2"
        style="@style/BtnStyle"
        android:layout_width="@dimen/nextbtn_width"
        android:layout_height="@dimen/nextbtn_height"
        android:layout_marginBottom="58dp"
        android:background="@drawable/btnbackground"
        android:fontFamily="@font/noto_sans_bold"
        android:text="@string/next2_btn"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <ImageView
        android:id="@+id/phonetag"
        android:layout_width="85dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="324dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.061"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/phone_image_foreground" />

    <ImageView
        android:id="@+id/teltag"
        android:layout_width="98dp"
        android:layout_height="59dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/reg2_text2"
        app:srcCompat="@mipmap/telecom_image_foreground" />

</androidx.constraintlayout.widget.ConstraintLayout>